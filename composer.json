{
    "name": "falconmedia/coding-standard-phpstorm",
    "description": "Falcon Media PHP Coding Standard PHPStorm integration",
    "type": "composer-plugin",
    "license": "MIT",
    "prefer-stable": true,
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Youwe B.V.",
            "email": "info@youweagency.com"
        },
        {
            "name": "Falcon Media.",
            "email": "info@falconmedia.nl"
        }
    ],
    "require": {
        "php": "^7.1 || ^8.0",
        "composer-plugin-api": "^1.0 || ^2.0"
    },
    "require-dev": {
        "ext-simplexml": "*",
        "kint-php/kint": "@stable",
        "mikey179/vfsstream": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Youwe\\CodingStandard\\PhpStorm\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Youwe\\CodingStandard\\PhpStorm\\Tests\\": "tests"
        }
    },
    "extra": {
        "class": "Youwe\\CodingStandard\\PhpStorm\\InstallerPlugin"
    },
    "archive": {
        "exclude": [
            "/bitbucket-pipelines.yml",
            "/.gitignore",
            "/tests",
            "/phpunit.xml",
            "/phpmd.xml",
            "/phpstan.neon",
            "/phpcs.xml",
            "/grumphp.yml",
            "/pdepend.xml",
            "/docker-compose.yml",
            "/.env.dev"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
